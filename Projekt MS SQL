CREATE TABLE Departamenty
(
    id_departamentu int,
    nazwa varchar(30),
    id_kierownika int,
    miejscowosc varchar(30)
);

CREATE TABLE Dostawcy
(
    id_dostawcy int,
    nazwa_dostawcy varchar(40),
    typ_produktu varchar(10)
);

CREATE TABLE faktura_sprzedazy
(
    id_faktury int,
    data_faktury datetime2,
    id_klienta int,
    wartosc_netto decimal(8,2),
    wartosc_brutto decimal(8,2),
    waluta varchar(5)
);


create table klienci
(
    id_klienta int,
    imie varchar(30),
    nazwisko varchar(30),
    miasto varchar(30),
    ulica varchar(30),
    email varchar(30),
    telefon varchar(18)
);

create table stanowiska
(
    id_stanowiska varchar(6),
    tytul varchar(40),
    min_wynagrodzenie decimal(8,2),
    max_wynagrodzenie decimal(10,2)
);

create table zamowienie
(
    id_zakupu int,
    pozycja int,
    id_produktu bigint,
    ilosc int,
    data_zamowienia datetime2
);

create table pracownicy
(
    id_pracownika bigint,
    imie varchar(30),
    drugie_imie varchar(30),
    nazwisko varchar(30),
    pesel varchar(11),
    data_zatrudnienia datetime2,
    stanowisko varchar(6),
    pensja decimal(10,2),
    id_kierownika int,
    id_departamentu int
);

create table dostawa
(
    id_dostawy int,
    id_produktu bigint,
    id_dostawcy int,
    ilosc int,
    typ_produktu varchar(10),
    data_dostawy datetime2
);


create table zakupy
(
    id_zakupu int,
    id_klienta int,
    typ_zaplaty varchar(10),
    czy_faktura varchar(1),
    id_faktury varchar(6)
);

create table realizacja
(
    id_zakupu int,
    status varchar(15),
    dostawca varchar(10)
);

create table produkty
(
    id_produktu bigint,
    nazwa varchar(30),
    typ_produktu varchar(10),
    cena_zakupu decimal(7,2),
    cena_sprzedazy decimal(8,2),
    opis varchar(100)
);

create table reklamacja
(
    id_reklamacji int,
    id_zakupu int,
    opis varchar(100),
    werdykt varchar(20)
);

create table typy_produktow
(
    typ_produktu varchar(10),
    nazwa varchar(20)
);

create table waluta
(
    waluta varchar(5),
    nazwa varchar(30)
);

create table dostawca_klienta
(
    id_dostawcy int,
    nazwa_dostawcy varchar(10)
);


create table absencje
(
    id_absencji int,
    id_pracownika bigint,
    nazwisko varchar(30),
    powod varchar(20),
    od datetime2,
    do datetime2
);



create sequence num_prac
minvalue 100
maxvalue 999
start with 100
increment by 1;

drop sequence num_prac;

create sequence num_prod
minvalue 1
maxvalue 999
start with 1
increment by 1;


